<!DOCTYPE html>
<html>
  <head>
    <title>Admin Area</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <br>
    <div class="container">
    <% if flash[:notice] %>
        <p class="alert alert-success"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
        <p class="alert alert-danger"><%= flash[:error] %></p>
    <% end %>

    <!-- TODO: this two paragraphs should me mor DRY -->
    <% if @subject&.errors&.any? %>
        <div class="alert alert-danger">
            <p><%= pluralize(@subject.errors.count, 'error') %></p>
            <ul>
                <% @subject.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <% if @page&.errors&.any? %>
        <div class="alert alert-danger">
            <p><%= pluralize(@page.errors.count, 'error') %></p>
            <ul>
                <% @page.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

        <%= yield %>

    </div>
  </body>
</html>
